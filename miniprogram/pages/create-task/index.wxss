/* pages/create-task/index.wxss */
.create-task-page { padding: 16rpx; padding-bottom: 160rpx; }

.form-group { padding: 24rpx; margin-bottom: 16rpx; }
.form-label { font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 16rpx; }
.form-input {
  border: 1rpx solid #E5E5E5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}
.form-textarea {
  border: 1rpx solid #E5E5E5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

.image-list { display: flex; flex-wrap: wrap; gap: 16rpx; }
.image-item { position: relative; width: 180rpx; height: 180rpx; }
.preview-img { width: 100%; height: 100%; border-radius: 12rpx; }
.remove-btn {
  position: absolute; top: -12rpx; right: -12rpx;
  width: 40rpx; height: 40rpx;
  background: rgba(0,0,0,0.6); color: #FFF;
  border-radius: 50%; font-size: 28rpx;
  display: flex; align-items: center; justify-content: center;
}
.image-add {
  width: 180rpx; height: 180rpx;
  border: 2rpx dashed #CCC;
  border-radius: 12rpx;
  display: flex; align-items: center; justify-content: center;
}
.add-icon { font-size: 60rpx; color: #CCC; }

.submit-area {
  position: fixed; bottom: 0; left: 0; right: 0;
  padding: 24rpx 32rpx;
  background: #FFF;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
}
.submit-btn {
  background: #FF6B35 !important;
  color: #FFF !important;
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.submit-btn[disabled] {
  opacity: 0.6;
}
