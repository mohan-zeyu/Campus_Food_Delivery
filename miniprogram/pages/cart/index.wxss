/* pages/cart/index.wxss */
.cart-page { padding-bottom: 140rpx; }

.cart-item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--color-border);
  align-items: flex-start;
}
.cart-item:last-child { border-bottom: none; }
.item-img { width: 120rpx; height: 120rpx; border-radius: 12rpx; margin-right: 20rpx; flex-shrink: 0; }
.item-name { font-size: 28rpx; font-weight: 500; margin-bottom: 8rpx; }
.item-remarks { margin-bottom: 8rpx; }
.price { color: #FF6B35; font-weight: 700; }

.qty-ctrl { align-items: center; }
.qty-btn {
  width: 48rpx; height: 48rpx;
  background: #EEEEEE;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 32rpx; color: #333;
}
.qty-btn.plus { background: #FF6B35; color: #FFF; }
.qty-num { width: 56rpx; text-align: center; font-size: 28rpx; }

.address-card { }
.addr-detail { font-size: 28rpx; margin: 8rpx 0; }
.add-addr-btn { color: #FF6B35; font-size: 28rpx; padding: 16rpx 0; }

.fee-row { padding: 8rpx 0; }

.checkout-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: #FFFFFF;
  display: flex; align-items: center;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
}
.checkout-btn { padding: 20rpx 48rpx; border-radius: 40rpx; background: #FF6B35; color: #FFF; font-size: 30rpx; font-weight: 600; }

.empty-cart {
  display: flex; flex-direction: column; align-items: center;
  padding-top: 200rpx;
}
.empty-icon { font-size: 120rpx; margin-bottom: 24rpx; }
.empty-text { color: #999; font-size: 28rpx; margin-bottom: 48rpx; }
.go-btn { padding: 20rpx 80rpx; border-radius: 40rpx; background: #FF6B35; color: #FFF; font-size: 30rpx; }
