/* pages/feedback/index.wxss */
.feedback-page { padding: 16rpx; }
.card { margin-bottom: 16rpx; }
.type-picker { padding: 16rpx 0; font-size: 28rpx; }
.feedback-textarea {
  width: 100%; height: 240rpx; background: #F5F5F5; border-radius: 12rpx;
  padding: 20rpx; box-sizing: border-box; font-size: 28rpx; color: #333;
}
.image-grid { display: flex; flex-wrap: wrap; gap: 16rpx; }
.image-item { position: relative; width: 160rpx; height: 160rpx; }
.image-thumb { width: 160rpx; height: 160rpx; border-radius: 8rpx; }
.image-delete {
  position: absolute; top: -12rpx; right: -12rpx;
  width: 40rpx; height: 40rpx; background: rgba(0,0,0,0.5);
  color: #FFF; border-radius: 50%; font-size: 28rpx;
  display: flex; align-items: center; justify-content: center;
}
.image-add {
  width: 160rpx; height: 160rpx; background: #F5F5F5; border-radius: 8rpx;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  border: 2rpx dashed #DDDDDD;
}
.add-icon { font-size: 48rpx; color: #CCCCCC; }
.submit-wrap { padding: 32rpx 0; }
.submit-btn { width: 100%; background: #FF6B35; color: #FFF; border-radius: 40rpx; padding: 28rpx 0; font-size: 32rpx; font-weight: 600; }
