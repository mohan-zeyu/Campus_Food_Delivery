/* pages/delivery-orders/index.wxss */
.delivery-orders-page { padding-bottom: 40rpx; }
.hall-header {
  background: #FF6B35;
  padding: 32rpx;
  display: flex; align-items: center; justify-content: space-between;
}
.header-title { font-size: 36rpx; font-weight: 700; color: #FFF; }
.order-count { color: rgba(255,255,255,0.8); }

.tab-bar-inner {
  display: flex;
  background: #FFF;
  border-bottom: 1rpx solid #EEE;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
  border-bottom: 4rpx solid transparent;
}
.tab-item.active {
  color: #FF6B35;
  font-weight: 600;
  border-bottom-color: #FF6B35;
}

.order-card { margin: 16rpx; }
.merchant-name { font-size: 30rpx; }
.task-title { font-size: 30rpx; flex: 1; margin-right: 16rpx; }
.task-desc {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}
.earn-fee { font-size: 32rpx; }
.accept-btn { color: #FF6B35; font-size: 28rpx; font-weight: 600; }
.empty-state { text-align: center; padding-top: 160rpx; }

.order-locations { line-height: 1.6; }
.loc-line { color: #888; }
