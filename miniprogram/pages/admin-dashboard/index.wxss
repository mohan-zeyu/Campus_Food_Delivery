/* pages/admin-dashboard/index.wxss */
.admin-dashboard-page { padding-bottom: 40rpx; }
.stats-banner { background: #FF6B35; padding: 40rpx 32rpx; }
.stats-title { font-size: 28rpx; color: rgba(255,255,255,0.8); margin-bottom: 24rpx; }
.stats-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; }
.stat-item { background: rgba(255,255,255,0.15); border-radius: 12rpx; padding: 24rpx; text-align: center; }
.stat-num { font-size: 40rpx; font-weight: 700; color: #FFF; margin-bottom: 8rpx; }
.stat-label { font-size: 22rpx; color: rgba(255,255,255,0.8); }
.menu-group { margin: 16rpx; padding: 0 24rpx; }
.menu-item { padding: 32rpx 0; font-size: 30rpx; }

/* Advanced stats */
.adv-section { padding: 0 16rpx; }
.adv-card { margin-top: 16rpx; }
.adv-title { font-size: 30rpx; }
.adv-stat { text-align: center; flex: 1; }
.adv-stat-num { font-size: 36rpx; font-weight: 700; color: #333; }
.cancel-rate { color: #E53935; }

/* Trend bars */
.trend-row { align-items: center; padding: 8rpx 0; }
.trend-date { width: 80rpx; font-size: 24rpx; color: #666; }
.trend-bar-wrap { height: 24rpx; background: #F0F0F0; border-radius: 12rpx; margin: 0 16rpx; overflow: hidden; }
.trend-bar { height: 100%; background: #FF6B35; border-radius: 12rpx; min-width: 8rpx; }
.trend-num { width: 80rpx; font-size: 24rpx; color: #666; text-align: right; }

/* Peak hours */
.peak-row { align-items: center; padding: 8rpx 0; }
.peak-hour { width: 80rpx; font-size: 24rpx; color: #666; }
.peak-bar-wrap { height: 24rpx; background: #F0F0F0; border-radius: 12rpx; margin: 0 16rpx; overflow: hidden; }
.peak-bar { height: 100%; background: #FFA726; border-radius: 12rpx; min-width: 8rpx; }
.peak-count { width: 60rpx; font-size: 24rpx; color: #666; text-align: right; }

/* Popular merchants */
.popular-row { align-items: center; padding: 12rpx 0; border-bottom: 2rpx solid #F5F5F5; }
.popular-row:last-child { border-bottom: none; }
.popular-rank {
  width: 40rpx; height: 40rpx; border-radius: 50%;
  background: #FF6B35; color: #FFF; font-size: 22rpx;
  display: flex; align-items: center; justify-content: center;
  margin-right: 16rpx;
}
.popular-name { font-size: 28rpx; }
.popular-count { font-size: 26rpx; }
