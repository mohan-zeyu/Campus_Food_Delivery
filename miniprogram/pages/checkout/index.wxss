/* pages/checkout/index.wxss */
.checkout-page { padding-bottom: 160rpx; }
.section-card { margin: 16rpx; }
.section-title { font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 20rpx; }
.addr-row { align-items: flex-start; }
.order-item { padding: 12rpx 0; border-bottom: 2rpx solid #EEEEEE; }
.order-item:last-child { border-bottom: none; }
.item-name { font-size: 28rpx; color: #333; }
.item-qty { margin: 0 16rpx; font-size: 26rpx; }
.item-price { font-size: 28rpx; color: #FF6B35; font-weight: 600; }
.fee-row { padding: 10rpx 0; font-size: 28rpx; }
.price { color: #FF6B35; font-weight: 700; }
.pay-tip { text-align: center; color: #999; font-size: 24rpx; padding: 20rpx; }

.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: #FFFFFF;
  display: flex; align-items: center;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
}
.submit-btn { padding: 20rpx 48rpx; border-radius: 40rpx; background: #FF6B35; color: #FFF; font-size: 30rpx; font-weight: 600; }
