/* pages/index/index.wxss */
.home-page {
  min-height: 100vh;
  background: #F6F7F9;
  padding-bottom: 120rpx;
}

.home-hero {
  background: linear-gradient(90deg, #FF7A2F, #FF9B40);
  padding: 20rpx 24rpx 24rpx;
  border-bottom-left-radius: 44rpx;
  border-bottom-right-radius: 44rpx;
  box-shadow: 0 10rpx 28rpx rgba(255, 122, 47, 0.22);
}

.search-shell {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 999rpx;
  padding: 18rpx 24rpx;
  box-shadow: inset 0 1rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-icon {
  font-size: 30rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  color: #A3A3A3;
  font-size: 27rpx;
}

.notice-swiper {
  height: 84rpx;
  margin: 20rpx 24rpx 0;
  border-radius: 20rpx;
  background: #FFF3E7;
}

.notice-item {
  height: 84rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.notice-type {
  background: #FF7A2F;
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.notice-icon {
  font-size: 26rpx;
  margin-right: 10rpx;
  color: #FF7A2F;
  flex-shrink: 0;
}

.notice-title {
  font-size: 26rpx;
  color: #E0711F;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main-tab-bar {
  margin: 22rpx 24rpx 0;
  display: flex;
  justify-content: space-around;
  border-bottom: 2rpx solid #EBEDF1;
}

.main-tab {
  position: relative;
  padding: 14rpx 26rpx 12rpx;
  color: #8D95A2;
  font-size: 34rpx;
  font-weight: 500;
}

.main-tab.active {
  color: #FF6B35;
  font-weight: 700;
}

.main-tab-line {
  position: absolute;
  left: 50%;
  bottom: -2rpx;
  width: 58rpx;
  height: 6rpx;
  margin-left: -29rpx;
  border-radius: 8rpx;
  background: #FF6B35;
}

.zone-bar {
  white-space: nowrap;
  padding: 16rpx 24rpx 8rpx;
}

.zone-inner {
  display: inline-flex;
  gap: 12rpx;
  padding-right: 24rpx;
}

.zone-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #5F6673;
  background: #FFFFFF;
  border: 2rpx solid #F0F2F5;
  box-shadow: 0 3rpx 10rpx rgba(15, 23, 42, 0.04);
}

.zone-item.active {
  background: #FF6B35;
  color: #FFFFFF;
  border-color: #FF6B35;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 53, 0.24);
}

.merchant-list {
  padding: 0 24rpx 18rpx;
}

.merchant-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  margin-top: 16rpx;
  border: 2rpx solid #F6F7FB;
  box-shadow: 0 8rpx 22rpx rgba(15, 23, 42, 0.07);
}

.merchant-cover-wrap {
  position: relative;
}

.merchant-cover {
  width: 100%;
  height: 250rpx;
}

.merchant-cover.closed {
  filter: grayscale(100%);
  opacity: 0.76;
}

.merchant-cover-status {
  position: absolute;
  right: 16rpx;
  top: 14rpx;
  background: rgba(17, 24, 39, 0.55);
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 8rpx 14rpx;
  border-radius: 12rpx;
}

.merchant-info {
  padding: 20rpx 22rpx 22rpx;
}

.merchant-name {
  font-size: 32rpx;
  color: #21242C;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.merchant-meta {
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
  color: #8B91A0;
  font-size: 24rpx;
}

.star {
  color: #FFB020;
  margin-right: 4rpx;
  font-size: 24rpx;
}

.rating {
  color: #FF7A2F;
  font-weight: 600;
}

.dot {
  margin: 0 10rpx;
  color: #B0B5C0;
}

.location {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.merchant-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.min-order {
  color: #8E95A3;
  font-size: 24rpx;
}

.min-order-price {
  color: #1F2937;
  font-weight: 700;
}

.status-pill {
  padding: 7rpx 18rpx;
  border-radius: 999rpx;
  font-size: 21rpx;
  font-weight: 600;
}

.status-pill.open {
  color: #0F9D58;
  background: #E9F9EE;
}

.status-pill.closed {
  color: #838A98;
  background: #F2F4F7;
}

.task-list {
  padding: 14rpx 24rpx 24rpx;
}

.task-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 22rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 22rpx rgba(15, 23, 42, 0.06);
}

.task-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.task-title-text {
  flex: 1;
  font-size: 30rpx;
  color: #1F2937;
  font-weight: 700;
  line-height: 1.35;
}

.task-reward {
  font-size: 34rpx;
  color: #FF6B35;
  font-weight: 700;
  white-space: nowrap;
}

.task-desc-text {
  margin-top: 10rpx;
  color: #6B7280;
  font-size: 25rpx;
  line-height: 1.55;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.task-locations {
  margin-top: 14rpx;
  color: #5E6572;
  font-size: 24rpx;
  line-height: 1.6;
}

.task-foot {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.task-publisher {
  color: #9CA3AF;
  font-size: 22rpx;
}

.task-status-tag {
  font-size: 21rpx;
  color: #FF6B35;
  background: #FFF3ED;
  border-radius: 999rpx;
  padding: 6rpx 16rpx;
}

.empty-tip {
  text-align: center;
  color: #9CA3AF;
  padding: 92rpx 32rpx;
  font-size: 26rpx;
}
