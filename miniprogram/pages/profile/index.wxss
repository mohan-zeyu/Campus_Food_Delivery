/* pages/profile/index.wxss */
.profile-page { padding-bottom: 40rpx; }
.user-header {
  background: linear-gradient(135deg, #FF6B35, #E55A28);
  display: flex; align-items: center;
  padding: 60rpx 32rpx calc(60rpx + 20rpx);
}
.avatar { width: 120rpx; height: 120rpx; border-radius: 50%; margin-right: 24rpx; background: rgba(255,255,255,0.3); }
.nickname { font-size: 36rpx; color: #FFFFFF; margin-bottom: 12rpx; }
.role-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  color: #FFFFFF;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
.menu-group { margin: 16rpx; padding: 0 24rpx; }
.menu-item { padding: 32rpx 0; }
.menu-label { font-size: 30rpx; color: #333; }
.menu-arrow { font-size: 36rpx; }
