/* pages/delivery-hall/index.wxss — 服务中心 */
.services-page { padding-bottom: 40rpx; }

.services-header {
  background: #FF6B35;
  padding: 40rpx 32rpx 48rpx;
}
.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFF;
}

.services-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx 16rpx;
  margin-top: -24rpx;
}

.service-card {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
}

.service-icon {
  width: 100rpx;
  height: 100rpx;
  background: #FFF;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  margin-bottom: 16rpx;
}

.service-label {
  font-size: 26rpx;
  color: #333;
}
