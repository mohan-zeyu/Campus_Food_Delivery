/* pages/product-detail/index.wxss */
.product-detail-page { padding-bottom: 140rpx; }
.img-swiper { height: 480rpx; }
.product-img { width: 100%; height: 480rpx; }
.product-name { margin-bottom: 8rpx; }
.price { color: #FF6B35; font-weight: 700; font-size: 28rpx; }
.price-num { font-size: 44rpx; }

.quantity-ctrl { align-items: center; }
.qty-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
.qty-btn.minus { background: #EEEEEE; color: #333; }
.qty-btn.plus  { background: #FF6B35; color: #FFF; }
.qty-num { width: 64rpx; text-align: center; font-size: 32rpx; font-weight: 600; }

.remarks-input {
  width: 100%;
  height: 64rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0; right: 0;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
}
.total-price { flex: 1; font-size: 28rpx; color: #333; }
.add-btn {
  background: #FF6B35;
  color: #FFF;
  padding: 20rpx 48rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.ai-remark-btn { display: flex; align-items: center; gap: 8rpx; margin-top: 16rpx; }
