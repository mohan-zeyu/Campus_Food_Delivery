<!--pages/admin-orders/index.wxml-->
<view class="admin-orders-page">
  <view wx:if="{{loading}}" class="loading-wrap">加载中...</view>
  <view class="order-item card" wx:for="{{orders}}" wx:key="_id">
    <view class="row-between">
      <view class="text-bold text-sm">{{item.order_no}}</view>
      <view class="status text-primary text-sm">{{item.statusLabel}}</view>
    </view>
    <view class="text-secondary text-sm mt-8">{{item.merchant_name}} · ¥{{item.total_amount/100}}</view>
    <view class="row mt-16" wx:if="{{item.status !== 'completed' && item.status !== 'cancelled'}}">
      <view class="resolve-btn text-error text-sm" catchtap="onResolve" data-id="{{item._id}}" data-action="cancel">强制取消</view>
      <view class="resolve-btn text-success text-sm ml-24" catchtap="onResolve" data-id="{{item._id}}" data-action="complete">强制完成</view>
    </view>
  </view>
</view>
