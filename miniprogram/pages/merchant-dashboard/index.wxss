/* pages/merchant-dashboard/index.wxss */
.merchant-dashboard-page { padding: 16rpx; }
.store-header {
  display: flex; align-items: center;
  background: #FFF; border-radius: 16rpx; overflow: hidden;
  margin-bottom: 16rpx; padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}
.store-cover { width: 100rpx; height: 100rpx; border-radius: 12rpx; margin-right: 20rpx; }
.store-info { flex: 1; }
.store-name { font-size: 30rpx; margin-bottom: 8rpx; }
.status-dot { width: 16rpx; height: 16rpx; border-radius: 50%; margin-right: 8rpx; }
.status-dot.open { background: #07C160; }
.status-dot.closed { background: #999; }
.toggle-btn { color: #FF6B35; font-size: 26rpx; border: 2rpx solid #FF6B35; padding: 8rpx 20rpx; border-radius: 20rpx; }
.quick-actions { display: flex; gap: 32rpx; margin-bottom: 16rpx; }
.action-item { flex: 1; text-align: center; padding: 32rpx 0; background: #F5F5F5; border-radius: 12rpx; }
.action-icon { font-size: 48rpx; margin-bottom: 12rpx; }
.stats-card { }
.stats-row { }
.stat-item { flex: 1; text-align: center; }
.stat-num { font-size: 48rpx; font-weight: 700; }
