/* components/merchant-card/index.wxss */
.merchant-card {
  background: #FFFFFF; border-radius: 16rpx;
  overflow: hidden; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  margin-bottom: 20rpx;
}
.cover { width: 100%; height: 280rpx; display: block; }
.info { padding: 20rpx 24rpx; }
.name { font-size: 32rpx; }
.rating { color: #FFA500; }
.dot { margin: 0 12rpx; color: #CCC; }
.status-badge { font-size: 22rpx; padding: 4rpx 16rpx; border-radius: 20rpx; }
.status-badge.open { color: #07C160; background: #E8F9EF; }
.status-badge.closed { color: #999; background: #F5F5F5; }
