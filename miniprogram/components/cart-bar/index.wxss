/* components/cart-bar/index.wxss */
.cart-bar {
  position: fixed;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
  left: 24rpx; right: 24rpx;
  background: #444444;
  border-radius: 60rpx;
  display: flex; align-items: center;
  padding: 16rpx 16rpx 16rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.25);
  z-index: 100;
  transition: transform 0.3s;
}
.cart-bar:not(.active) { transform: translateY(200rpx); }
.cart-icon-wrap { position: relative; margin-right: 16rpx; }
.cart-emoji { font-size: 48rpx; }
.badge {
  position: absolute; top: -10rpx; right: -10rpx;
  background: #FF6B35; color: #FFF;
  font-size: 18rpx; min-width: 32rpx; height: 32rpx;
  border-radius: 16rpx;
  display: flex; align-items: center; justify-content: center;
  padding: 0 6rpx;
}
.total-text { color: #FFFFFF; font-size: 32rpx; font-weight: 600; }
.checkout-btn {
  background: #FF6B35; color: #FFF;
  border-radius: 40rpx; padding: 16rpx 28rpx;
  font-size: 28rpx; font-weight: 600; white-space: nowrap;
}
