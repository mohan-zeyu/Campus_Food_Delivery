/* components/address-item/index.wxss */
.address-item {
  display: flex; align-items: flex-start;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 2rpx solid #EEEEEE;
  margin-bottom: 16rpx;
}
.address-item.selected { border-color: #FF6B35; background: #FFF0EB; }
.addr-top { margin-bottom: 4rpx; }
.default-badge {
  margin-left: 12rpx;
  background: #FFF0EB; color: #FF6B35;
  font-size: 20rpx; padding: 2rpx 10rpx; border-radius: 20rpx;
}
.action-btn { padding: 4rpx 8rpx; }
