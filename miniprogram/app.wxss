/**app.wxss**/

/* ===== CSS Design Tokens ===== */
page {
  --color-primary: #FF6B35;
  --color-primary-light: #FFF0EB;
  --color-primary-dark: #E55A28;
  --color-text: #333333;
  --color-text-secondary: #999999;
  --color-text-light: #BBBBBB;
  --color-border: #EEEEEE;
  --color-bg: #F5F5F5;
  --color-white: #FFFFFF;
  --color-success: #07C160;
  --color-warning: #FFA500;
  --color-error: #E54545;
  --radius-card: 16rpx;
  --radius-btn: 8rpx;
  --shadow-card: 0 2rpx 12rpx rgba(0,0,0,0.06);
  --shadow-bottom: 0 -2rpx 12rpx rgba(0,0,0,0.06);
  background: var(--color-bg);
  font-family: -apple-system, 'PingFang SC', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: var(--color-text);
}

/* ===== Global Reset ===== */
button {
  background: initial;
  padding: 0;
  border: none;
  line-height: inherit;
}
button:focus { outline: 0; }
button::after { border: none; }

/* ===== Common Layout ===== */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

/* ===== Cards ===== */
.card {
  background: var(--color-white);
  border-radius: var(--radius-card);
  box-shadow: var(--shadow-card);
  padding: 24rpx;
  margin: 16rpx;
}

/* ===== Primary Button ===== */
.btn-primary {
  background: var(--color-primary);
  color: #FFFFFF;
  border-radius: var(--radius-btn);
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}
.btn-primary[disabled] {
  background: #CCCCCC;
}

/* ===== Secondary Button ===== */
.btn-secondary {
  background: var(--color-white);
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: var(--radius-btn);
  padding: 18rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

/* ===== Ghost Button ===== */
.btn-ghost {
  background: transparent;
  color: var(--color-text-secondary);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-btn);
  padding: 18rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

/* ===== Section Header ===== */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  padding: 24rpx 32rpx 16rpx;
}

/* ===== Divider ===== */
.divider {
  height: 2rpx;
  background: var(--color-border);
  margin: 0 32rpx;
}

/* ===== Price Text ===== */
.price {
  color: var(--color-primary);
  font-weight: 700;
}
.price-unit {
  font-size: 22rpx;
  font-weight: 400;
}

/* ===== Badge ===== */
.badge {
  display: inline-block;
  background: var(--color-primary);
  color: #FFFFFF;
  border-radius: 20rpx;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  line-height: 1.4;
}

/* ===== Tag ===== */
.tag {
  display: inline-block;
  background: var(--color-primary-light);
  color: var(--color-primary);
  border-radius: 6rpx;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  margin-right: 8rpx;
}

/* ===== Status Pills ===== */
.status-pending   { color: #FFA500; background: #FFF8E8; }
.status-paid      { color: #1890FF; background: #E6F4FF; }
.status-accepted  { color: #722ED1; background: #F9F0FF; }
.status-transit   { color: #07C160; background: #E8F9EF; }
.status-delivered { color: var(--color-primary); background: var(--color-primary-light); }
.status-completed { color: var(--color-text-secondary); background: #F5F5F5; }
.status-cancelled { color: var(--color-error); background: #FFEEEE; }

/* ===== Flex Helpers ===== */
.row { display: flex; align-items: center; }
.row-between { display: flex; align-items: center; justify-content: space-between; }
.col { display: flex; flex-direction: column; }
.flex-1 { flex: 1; }

/* ===== Text Helpers ===== */
.text-primary   { color: var(--color-primary); }
.text-secondary { color: var(--color-text-secondary); }
.text-error     { color: var(--color-error); }
.text-success   { color: var(--color-success); }
.text-bold      { font-weight: 600; }
.text-sm        { font-size: 24rpx; }
.text-xs        { font-size: 20rpx; }
.text-lg        { font-size: 32rpx; }
.text-xl        { font-size: 36rpx; }

/* ===== Spacing ===== */
.mt-8  { margin-top: 8rpx; }
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mb-8  { margin-bottom: 8rpx; }
.mb-16 { margin-bottom: 16rpx; }
.px-32 { padding-left: 32rpx; padding-right: 32rpx; }

/* ===== Bottom Safe Area ===== */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}

/* ===== Loading Indicator ===== */
.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: var(--color-text-secondary);
  font-size: 26rpx;
}

/* ===== No-more indicator ===== */
.no-more {
  text-align: center;
  color: var(--color-text-light);
  font-size: 24rpx;
  padding: 32rpx;
}
